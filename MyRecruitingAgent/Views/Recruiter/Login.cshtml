
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Login.css" rel="stylesheet" />

<div class="jumbotron" style="margin-top:1%">
    <div class="row">
        <div class="col-md-7 col-md-offset-1">
            <div class="header">
                <h1>Login</h1>
                <h2><strong>My Recruiting Agent </strong></h2>
            </div>
        </div>
        <br>
        <div>
            @ViewBag.Error
        </div>
        <div class="col-md-4">
            <form method="post" action="@Url.Action("Login","Recruiter")">

                <span style="color:red;margin-bottom:5px;">@ViewBag.Error</span>
                <input type="text" placeholder="Email Address" name="UserName" class="form-control"><br>
                <input type="password" placeholder="Password" name="Password" class="form-control"><br>
                <div class="row">
                    <div class="col-md-8 btn-group">
                        <input type="submit" class="btn btn-success btn-sm" style="margin-right:5px !important" value="Login" />
                        <a href="@Url.Action("SignUp","Recruiter")" class="btn btn-primary btn-sm">Sign Up</a>
                    </div>
                   
                </div>
                <div class="row" style="margin-top:10px;">
                    <div class="col-md-8">
                        <span><a href="@Url.Action("ForgotPassword","Recruiter")">Forgot Password</a></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

